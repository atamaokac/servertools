#!/bin/bash
sstm -c /usr/local/etc/sstm/system_original.yaml / /mnt/admin/timemachine/private/original-disk/system/snapshots
sync
midvol="/mnt/admin/timemachine/private/original-disk/system/backup/original"
if [ -d $midvol ]; then
  btrfs subvolume delete $midvol
  sync
fi
btrfs subvolume snapshot `ls -d /mnt/admin/timemachine/private/original-disk/system/snapshots/* | sort -nr | head -1` $midvol
# rsync --delete-excluded -aAXH --inplace --exclude '/.snapshots/' --exclude '/mnt/*/**' `ls -d /mnt/admin/timemachine/private/original-disk/system/snapshots/* | sort -nr | head -1`/ /mnt/admin/timemachine/private/original-disk/system/backup/original/
senddiff /mnt/admin/timemachine/private/original-disk/system/backup /mnt/admin/timemachine/private/backup-disk/system/backup
sstm -c /usr/local/etc/sstm/system_original.yaml -s backup /mnt/admin/timemachine/private/backup-disk/system/backup/latest /mnt/admin/timemachine/private/backup-disk/system/snapshots
